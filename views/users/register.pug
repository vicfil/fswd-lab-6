extends ../layout.pug
block header
  
  
block body
  h1 Registration Page!
  
  if message
    em #{message}
  
  form.form-inline(method="POST" action="/users/register")
    div.form-group
      input.form-control(type="text" name="username")
      input.form-control(type="text" name="password")
      input.form-control(type="text" name="passwordConfirm")
    button#add.btn.btn-default Register
  
  |Already registered? 
  |
  a(href="/users/login") Login
  
